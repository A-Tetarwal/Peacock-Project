<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.name %>'s Portfolio</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .peacockk {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .peacockk:hover {
      transform: scale(1.01);
      box-shadow:2.5px 2.5px 0px 0px #505050;
    }
  </style>
</head>
<body class="bg-gray-900 text-gray-100">
  <!-- Header -->
  <header class="bg-gray-800 text-white py-6">
    <div class="flex justify-center items-center gap-10">
      <div class="nameabout flex flex-col items-center">
        <h1 class="text-4xl font-bold text-center"><%= user.name %></h1>
        <p class="mt-2 text-lg text-center"><%= user.about %></p>
      </div>
      <img src="/images/uploads/22725a21211af408c25aa17d.jpg" alt="<%= user.name %>'s Profile Picture" class="w-32 h-32 rounded-xl">
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <!-- Technical Skills -->
    <section id="technical-skills" class="bg-gray-800 px-6 py-4 rounded-lg peacockk m-3">
      <h2 class="text-2xl font-semibold mb-4">Technical Skills</h2>
      <% if (user.technicalSkills.length > 0) { %>
        <div class="px-5 flex">
          <% user.technicalSkills.forEach(skill => { %>
            <p class="text-sm bg-gray-700 px-1.5 py-1 rounded hover:bg-gray-600 cursor-pointer"><strong><%= skill.skill %></strong>: <%= skill.proficiency %>/10</p>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-400">No technical skills listed.</p>
      <% } %>
    </section>

    <!-- Achievements -->
    <section id="achievements" class="bg-gray-800 px-6 py-4 rounded-lg peacockk m-3">
      <h2 class="text-2xl font-semibold mb-4">Achievements</h2>
      <% if (user.achievements.length > 0) { %>
        <div class="list-disc pl-5">
          <% user.achievements.forEach(achievement => { %>
            <p class="text-sm bg-gray-700 px-1.5 py-1 rounded hover:bg-gray-600 cursor-pointer">
              <strong><%= achievement.achievement %></strong>: <%= achievement.description %>
            </p>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-400">No achievements listed.</p>
      <% } %>
    </section>

    <!-- Projects -->
    <section id="projects" class="bg-gray-900 px-6 py-4 m-3">
      <h2 class="text-2xl font-semibold mb-4">Projects</h2>
      <% if (user.projects.length > 0) { %>
        <div class="flex justify-center gap-3">
          <% user.projects.forEach(project => { %>
            <div class="flex flex-col justify-between px-3 py-3 flex-wrap w-72 bg-gray-800 rounded-lg peacockk cursor-pointer">
              <img src="/images/projects/projectdefault.jpg" alt="<%= project.projectName %>" class="w-68 h-68 rounded-lg">
              <div class="proj">
                <h3 class="text-2xl font-medium"><%= project.projectName %></h3>
                <p class="text-sm h-14 overflow-hidden tracking-tighter"><%= project.projectAbout %></p>
              </div>
              <div class="buttons flex justify-between py-2 mt-1.5">
                <p><a href="<%= project.githublink %>" target="_blank" class="text-white bg-green-600 px-1.5 py-1 rounded hover:bg-green-700">GitHub Link</a></p>
                <% if (project.demo) { %>
                  <p><a href="<%= project.demo %>" target="_blank" class="text-white bg-green-600 px-1.5 py-1 rounded hover:bg-green-700">Demo</a></p>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-400">No projects listed.</p>
      <% } %>
    </section>

    <!-- Internships -->
    <section id="internships" class="mb-8">
      <h2 class="text-3xl font-semibold mb-4">Internships</h2>
      <% if (user.internships.length > 0) { %>
        <div class="list-disc pl-5">
          <% user.internships.forEach(internship => { %>
            <p class="mb-4">
              <strong><%= internship.internshipCompany %></strong>
              <p>Duration: <%= internship.internshipDuration %></p>
              <p>Skills: <%= internship.internshipSkills %></p>
              <% if (internship.internshipCertificate) { %>
                <p><a href="<%= internship.internshipCertificate %>" target="_blank" class="text-blue-400 underline">Certificate</a></p>
              <% } %>
            </p>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-400">No internships listed.</p>
      <% } %>
    </section>

    <!-- Platforms -->
    <section id="platforms">
      <h2 class="text-3xl font-semibold mb-4">Platforms</h2>
      <% if (user.platforms.length > 0) { %>
        <div class="list-disc pl-5">
          <% user.platforms.forEach(platform => { %>
            <p class="text-lg bg-gray-700 px-1.5 py-1 rounded"><strong><%= platform.platform %></strong>: <%= platform.username %></p>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-400">No platforms listed.</p>
      <% } %>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-gray-300 py-4">
    <div class="container mx-auto px-4 text-center">
      <p>Contact: <a href="mailto:<%= user.email %>" class="text-blue-400 underline"><%= user.email %></a></p>
    </div>
  </footer>
</body>
</html>
